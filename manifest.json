{
  "name": "toggle-google-search",
  "version": "0.1",
  "description": "Toggles google search language",
  "manifest_version": 2,
  "minimum_chrome_version": "73",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://www.google.com/*",
    "*://www.google.co.jp/*"
  ],
  "browser_action": {
    "default_title": "Toggle google search language",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
