{
  "name": "toggle-google-search",
  "version": "0.1.0",
  "description": "Toggle google search language",
  "main": "index.js",
  "scripts": {
    "build": "npm run compile && npm run copy",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf build",
    "copy": "npm run copy-index && npm run copy-manifest",
    "copy-index": "cpx src/index.html ./build/out",
    "copy-manifest": "cpx manifest.json ./build/out",
    "web-ext-run": "cd ./build/out && web-ext run",
    "web-ext-build": "cd ./build/out && web-ext build --overwrite-dest",
    "web-ext-lint": "cd ./build/out && web-ext lint",
    "watchBuild": "tsc -p tsconfig.json -w"
  },
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2",
    "web-ext": "^6.6.0"
  }
}
