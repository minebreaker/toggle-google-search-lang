{
  "name": "toggle-google-search",
  "version": "0.3.0",
  "description": "Toggles google search language",
  "manifest_version": 2,
  "minimum_chrome_version": "73",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://www.google.com/search?*",
    "*://www.google.co.jp/search?*"
  ],
  "browser_action": {
    "default_title": "Toggle google search language",
    "default_popup": "index.html",
    "default_icon": "icon.svg"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "toggle-google-search@deadcode.rip",
      "strict_min_version": "52.0"
    }
  }
}
